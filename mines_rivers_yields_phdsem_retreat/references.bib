@Article{mwelwa2023,
  author    = {Mwelwa, S. and Chungu, D. and Tailoka, F. and Beesigamukama, D. and Tanga, C.},
  journal   = {Science of The Total Environment},
  title     = {Biotransfer of heavy metals along the soil-plant-edible insect-human food chain in {A}frica},
