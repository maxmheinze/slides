@article{jasansky2023,
	author = {Jasansky, Simon and Lieber, Mirko and Giljum, Stefan and Maus, Victor},
	title = {An open database on global coal and metal mine production},
	journal = {Scientific Data},
	volume = {10},
	number = {52},
	pages = {1--12},
	year = {2023},
	issn = {2052-4463},
	publisher = {Nature Publishing Group},
	doi = {10.1038/s41597-023-01965-y},
	abstract = {While the extraction of natural resources has been well documented and analysed at the national level, production trends at the level of individual mines are more difficult to uncover, mainly due to poor availability of mining data with sub-national detail. In this paper, we contribute to filling this gap by presenting an open database on global coal and metal mine production on the level of individual mines. It is based on manually gathered information from more than 1900 freely available reports of mining companies, where every data point is linked to its source document, ensuring full transparency. The database covers 1171 individual mines and reports mine-level production for 80 different materials in the period 2000{\textendash}2021. Furthermore, also data on mining coordinates, ownership, mineral reserves, mining waste, transportation of mining products, as well as mineral processing capacities (smelters and mineral refineries) and production is included.}
